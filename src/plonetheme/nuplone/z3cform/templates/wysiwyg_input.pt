<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:meta="http://xml.zope.org/namespaces/meta"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="nuplone"
      meta:interpolation="true"
      tal:define="portal_state context/@@plone_portal_state"
      tal:omit-tag="">
  <fieldset class="richInput">
    <legend class="${view/@@dependencies}" lang="${portal_state/language}">${view/label}<sup tal:condition="view/required" class="required">*</sup></legend>
    <dfn class="infoPanel" 
         i18n:attributes="title" 
         title="Information" 
         tal:define="description view/field/description" 
         tal:condition="description" 
         tal:content="description"/>
    <label for="${view/id}" class="superImpose" i18n:translate="">Please enter text here</label>
    <textarea class="rich" id="${view/id}" name="${view/name}" disabled="${view/disabled}" readonly="${view/readonly}" cols="${view/cols}" rows="${view/rows}"><tal:content condition="view/value" replace="structure view/value"/></textarea> 
    <tal:error condition="view/error" replace="structure view/error/render|nothing"/>
  </fieldset>
</html>

