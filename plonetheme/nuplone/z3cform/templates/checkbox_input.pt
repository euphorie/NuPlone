<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="nuplone"
      tal:omit-tag=""
      tal:define="item python:view.items[0]">
  <label tal:attributes="class view/@@dependencies"><tal:span replace="item/label">Widget label</tal:span> <sup tal:condition="view/required" class="required">*</sup>
    <dfn class="infoPanel" i18n:attributes="title" title="Information" tal:define="description view/field/description" tal:condition="description" tal:content="description"/>
      <input type="checkbox"
      tal:define="checked item/checked"
      tal:attributes="id view/id;
                      name item/name; 
                      value item/value;
                      checked python:'checked' if checked else None;
                      class view/klass;
                      disabled view/disabled;
                      readonly view/readonly;"
                      /> <tal:error condition="view/error" replace="structure view/error/render|nothing"/></label>
  <input type="hidden" value="1" tal:attributes="name string:${view/name}-empty-marker" />
</html>
